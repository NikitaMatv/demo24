<Page x:Class="Admin.Pages.MainMenuPages"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Admin.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenuPages">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="BtUserList" Click="BtUserList_Click">Сотрудники</Button>
            <Button x:Name="BtSmena" Click="BtSmena_Click" Margin=" 10 0 10 0">Смена</Button>
            <Button x:Name="BtOrder" Click="BtOrder_Click">Договоры</Button>
        </StackPanel>
        <Frame Grid.Row="1" x:Name="ManuFrame" NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Page>
