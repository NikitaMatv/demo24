<Page x:Class="Urist.Pages.AutorthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Urist.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AutorthPage">


    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Height="100" Width="200">
        <StackPanel>
            <TextBlock>Логин</TextBlock>
            <TextBox x:Name="TbLogin"></TextBox>
            <TextBlock>Пароль</TextBlock>
            <PasswordBox x:Name="PbPassword"></PasswordBox>
            <Button x:Name="BtAuth" Click="BtAuth_Click" Margin="0 5 0 0 ">Авиризоваться</Button>
        </StackPanel>
    </StackPanel>
</Page>
